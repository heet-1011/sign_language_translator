<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:background="@color/cream50">

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_dark"
        android:padding="5dp"
        android:text="Capture"
        android:textColor="@color/cream"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flayout" />

    <ImageButton
        android:id="@+id/btn_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_dark"
        android:padding="15dp"
        android:textColor="@color/cream"
        android:textSize="20sp"
        android:src="@drawable/ic_person"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/cream" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translated Sign"
        android:textSize="18sp"
        android:textColor="@color/brown"
        app:layout_constraintBottom_toTopOf="@id/btn_speech"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_camera" />

    <TextView
        android:id="@+id/preview"
        android:text="Capture Preview"
        android:textSize="18sp"
        android:textColor="@color/brown"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/flayout"
        android:background="#103c2f2f"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>